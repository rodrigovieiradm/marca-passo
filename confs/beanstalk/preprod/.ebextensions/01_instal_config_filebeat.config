files:
  "/etc/yum.repos.d/beats.repo":
    mode: "000644"
    owner: root
    group: root
    content: |
      [beats]
      name=Elastic Beats Repository
      baseurl=https://packages.elastic.co/beats/yum/el/$basearch
      enabled=1
      gpgkey=https://packages.elastic.co/GPG-KEY-elasticsearch
      gpgcheck=1

  "/opt/elasticbeanstalk/hooks/appdeploy/post/10_install_filebeat.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      yum -y install filebeat


  "/etc/filebeat/filebeat.yml":
    mode: "000644"
    owner: root
    group: root
    content: |
      filebeat:
        prospectors:
          -
            paths:
              - /var/log/httpd/*_log
              - /var/log/httpd/healthd/*
              - /var/log/httpd/rotated/*
            exclude_files: [".gz$"]
            input_type: log
            document_type: proxy

          -
            paths:
              - /var/log/eb-*
            exclude_files: [".gz$"]
            input_type: log
            document_type: beanstalk_logs

            multiline:
              pattern: ([0-9]){4}(-[0-9]{2}){2}[[:space:]]([0-9]{2}[\:\,\.]){3}[0-9]{2,3}
              negate: true
              match: after
              max_lines: 500
              timeout: 5s

          -
            paths:
              - /var/log/tomcat8/*.log
              - /var/log/tomcat8/catalina.out
            exclude_files: [".gz$"]
            input_type: log
            document_type: tomcat_log

            multiline:
              pattern: ([0-9]){4}(-[0-9]{2}){2}[[:space:]]([0-9]{2}[\:\,\.]){3}[0-9]{2,3}
              negate: true
              match: after
              max_lines: 500
              timeout: 5s

        registry_file: /var/lib/filebeat/registry

      output:

        logstash:
          hosts: ["prep-logstash-input.application.internal:5044"]
          worker: 1
          index: filebeat

      shipper:
        name: marcapasso-preprod
        tags: ["marcapasso-preprod", "backend-tier"]

      logging:
        to_files: true
        files:
          path: /var/log/mybeat
          name: mybeat.out
          rotateeverybytes: 10485760 # = 10MB
          keepfiles: 2
        level: debug



  "/root/start_filebeat.sh":
    mode: "000700"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      sleep 120
      echo "$(date) rodou" >> /root/rodou.out
      /etc/init.d/filebeat start
      rm -f /var/spool/cron/root
      sleep 30
      /etc/init.d/filebeat restart


  "/var/spool/cron/root":
    mode: "000600"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      */1 *  *  *  * /root/start_filebeat.sh
